{
  "compilerOptions": {
    "outDir": "./lib",
    "declaration": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
	  "es6",
	  "es2018.asynciterable"
	]
  },
  "include": ["./src/**/*"]
}